@model QLbansach_tutorial.Models.Dondathang

@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.MaDonHang;
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Chi tiết đơn hàng #@Model.MaDonHang</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Chitietdonhangs)
                            {
                                <tr>
                                    <td>@item.MasachNavigation?.Tensach</td>
                                    <td>@item.Soluong</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4>Thông tin đơn hàng</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Ngày đặt:</strong>
                        <span>@Model.Ngatdat?.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="mb-3">
                        <strong>Trạng thái giao hàng:</strong>
                        @if (Model.Tinhtranggiaohang == "Đã giao hàng")
                        {
                            <span class="badge badge-success">Đã giao hàng</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">@Model.Tinhtranggiaohang</span>
                        }
                    </div>
                    @if (Model.Ngaygiao.HasValue)
                    {
                        <div class="mb-3">
                            <strong>Ngày giao:</strong>
                            <span>@Model.Ngaygiao?.ToString("dd/MM/yyyy")</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 